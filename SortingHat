package sortingHat;

import java.util.Scanner;

public class SortingHat {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to Hogwarts! We will ask you a few questions to determine which house suits you best.");

        // Create instances of the Questions class for each question
        Question question1 = new Question("Which trait is most important to you?", new String[]{"Wisdom", "Ambition", "Integrity", "Kindness"}, "Ravenclaw");
        Question question2 = new Question("What interests you the most in the wizarding world?", new String[]{"Learning new and fascinating things", "Overcoming challenges and achieving victories", "Making ethical and honest decisions", "Helping others and building social connections"}, "Slytherin");
        Question question3 = new Question("What do you prefer?", new String[]{"Reading a book quietly in the library", "Facing a group of challenges and coming out victorious", "Making straightforward and honest decisions", "Helping others and developing social connections"}, "Gryffindor");
        Question question4 = new Question("Which magical creature do you find most fascinating?", new String[]{"Phoenix", "Niffler", "Thestral", "Basilisk"}, "Hufflepuff");
        Question question5 = new Question("What is your favorite subject at Hogwarts?", new String[]{"Transfiguration", "Potions", "Charms", "Defense Against the Dark Arts"}, "Ravenclaw");

        // Ask each question and get the user's answer
        int answer1 = question1.getAnswer();
        int answer2 = question2.getAnswer();
        int answer3 = question3.getAnswer();
        int answer4 = question4.getAnswer();
        int answer5 = question5.getAnswer();

        String[] houses = {"Gryffindor", "Hufflepuff", "Ravenclaw", "Slytherin"};
        int[] housePoints = new int[4];

        housePoints[0] += answer3 + answer5; // Gryffindor
        housePoints[1] += answer4; // Hufflepuff
        housePoints[2] += answer1 + answer5; // Ravenclaw
        housePoints[3] += answer2; // Slytherin

        // Determine house with highest score
        int maxPointsIndex = 0;
        for (int i = 1; i < housePoints.length; i++) {
            if (housePoints[i] > housePoints[maxPointsIndex]) {
                maxPointsIndex = i;
            }
        }

        // Return House that user belongs to
        String house = houses[maxPointsIndex];

        System.out.println("The Sorting Hat is deciding...");
        System.out.println("Ah, I see where you belong!");
        System.out.println("You belong to the house of " + house + "!");

        System.out.println("Welcome to " + house + "!");

        scanner.close();
    }
}

class Question {
    private String question;
    private String[] choices;
    private String house;

    public Question(String question, String[] choices, String house) {
        this.question = question;
        this.choices = choices;
        this.house = house;
    }

    public int getAnswer() {
        // Create a new Scanner object to read user input from the console
        Scanner scanner = new Scanner(System.in);

        // Display the question to the user
        System.out.println(question);

        // Display the choices to the user
        for (int i = 0; i < choices.length; i++) {
            System.out.println((i + 1) + ". " + choices[i]);
        }

        // Prompt the user to enter their choice
        System.out.print("Enter your choice (1-" + choices.length + "): ");
        int answer = scanner.nextInt();

        // Check the user's input
        while (answer < 1 || answer > choices.length) {
            // Error
            System.out.print("Invalid choice, please enter a number between 1 and " + choices.length + ": ");
            answer = scanner.nextInt();
        }

        return answer - 1;
    }
}


